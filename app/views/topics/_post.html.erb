<div class="post-card" data-post-id="<%= post['id'] %>">
  <div class="post-media">
    <% if post['media_type'] == 'IMAGE' %>
      <% media_path = post['media_url'].gsub('data/mock/', '/mock/') %>
      <%= image_tag media_path, class: 'post-image', alt: '帖子图片' %>
    <% else %>
      <% media_path = post['media_url'].gsub('data/mock/', '/mock/') %>
      <% # 动态生成封面路径：/mock/poster/video_name_poster.jpeg %>
      <% video_name = File.basename(media_path, File.extname(media_path)) %>
      <% poster_path = "/mock/poster/#{video_name}_poster.jpeg" %>
      <video class="post-video" controls preload="none" poster="<%= poster_path %>">
        <source src="<%= media_path %>" type="video/mp4">
        您的浏览器不支持视频标签。
      </video>
    <% end %>
  </div>

  <div class="post-content">
    <div class="post-caption">
      <%= post['caption'] %>
    </div>

    <div class="post-meta">
      <div class="post-stats">
        <span class="likes">❤️ <%= post['like_count'] %></span>
        <span class="comments">💬 <%= post['comments_count'] %></span>
      </div>
      <div class="post-time">
        <%= Time.parse(post['timestamp']).strftime('%Y-%m-%d %H:%M') %>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .post-card {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.2s;
    }

    .post-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .post-media {
      width: 100%;
      aspect-ratio: 1; /* 保持 1:1 的宽高比 */
      overflow: hidden;
      position: relative; /* 建议添加，以便后续可能需要绝对定位内部元素 */
      background-color: #eee; /* 添加一个背景色，便于调试查看容器范围 */
    }

    .post-media .plyr { /* 选择 .post-media 下的 Plyr 容器 */
      width: 100%;
      height: 100%;
      position: absolute; /* 让它相对于 .post-media 定位 */
      top: 0;
      left: 0;
    }

    .post-media .plyr video {
      object-fit: cover;
      width: 100%;  /* Plyr 通常会处理这个，但显式设置可能更保险 */
      height: 100%; /* Plyr 通常会处理这个，但显式设置可能更保险 */
    }

    .post-image, .post-video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .post-content {
      padding: 15px;
    }

    .post-caption {
      margin-bottom: 10px;
      font-size: 0.9em;
      line-height: 1.4;
    }

    .post-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.8em;
      color: #666;
    }

    .post-stats span {
      margin-right: 10px;
    }

    .post-time {
      color: #999;
    }
  </style>
<% end %>