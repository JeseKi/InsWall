    <% end %>
  </div>

  <div class="post-content">
    <div class="post-caption">
      <%= post['caption'] %>
    </div>

    <div class="post-meta">
      <div class="post-stats">
        <span class="likes">‚ù§Ô∏è <%= post['like_count'] %></span>
        <span class="comments">üí¨ <%= post['comments_count'] %></span>
