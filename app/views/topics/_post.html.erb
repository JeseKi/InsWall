<% content_for :styles do %>
  <style>
    .post-card {
      background: #fff;
      border: 1px solid #ddd;
      border-radius: 8px;
      overflow: hidden;
      transition: transform 0.2s;
    }

    .post-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .post-media {
      width: 100%;
      aspect-ratio: 1;
      overflow: hidden;
      position: relative;
      background-color: #eee;
    }

    .post-media .plyr {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }

    .post-media .plyr video {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }

    .post-image, .post-video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .post-content {
      padding: 15px;
    }

    .post-caption {
      margin-bottom: 10px;
      font-size: 0.9em;
      line-height: 1.4;
    }

    .post-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.8em;
      color: #666;
    }

    .post-stats span {
      margin-right: 10px;
    }

    .post-time {
      color: #999;
    }
  </style>
<% end %>